@model IEnumerable<ProductCategory>

<h1>Products</h1>

<a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary mb-3">Add Product</a>



@foreach(var category in Model)
{
    <div class="mb-4">
        <div class="row g-0">
            <div class="col-md-3">
                <h3 class="card-title px-3">@category.CategoryName</h3>
            </div>
            <div class="col-md-3">
                <h4 class="card-title px-3">Ürün İsmi</h4>
            </div>
            <div class="col-md-2">
                <h4 class="card-text px-3">Fiyat</h4>
            </div>
            <div class="col-md-3">
                <h4 class="card-text px-3">Satış Durumu</h4>
            </div>
            <div class="col-md-1">
                <h5 class="card-text px-3"></h5>
            </div>
        </div>
        @foreach(var item in category.Products)
        {
            <div class="card mb-3 bg-light">
                <div class="row g-0 ">
                    <div class="col-md-3">
                        <img style="height:200px;" src="/Img/@item.ProductImage" class="img-fluid text-center" alt="No Image">
                    </div>
                    <div class="col-md-3">
                        <div class="card-body">
                            <h4 class="card-title">@item.ProductName</h4>
                            <p class="card-text">@item.ProductDescription</p>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card-body">
                            <h4 class="card-text">@item.ProductPrice TL</h4>
                            
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card-body">
                            @if(@item.IsActive)
                            {
                                <h4 class="card-text">Var</h4>
                            }
                            else
                            {
                                <h4 class="card-text">Yok</h4>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-2">
                        <div class="card-body text-center">
                            <a asp-controller="Product" asp-action="Editproduct" asp-route-id="@item.ProductId" class="btn btn-primary mb-3 d-block flex-fill">Edit</a>
                            <form asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@item.ProductId" method="post" class="d-flex">
                                <button onclick="return confirm('Are you sure you want to remove this item?');" class="btn btn-danger mb-3 d-block flex-grow-1">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}